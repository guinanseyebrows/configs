# style
ignore                  lemonbar	
gap			            25 0 0 0
borderwidth 		    1 
color inactiveborder 	"#c2c2c2"
color activeborder  	"#f3f3f3"
color font 	    	    "#e1e1e1"
color menubg 		    "#222222"
color menufg 		    "#e1e1e1"
fontname    		    "Noto Sans:pixelsize=13:style=Italic"

# system
unbind-key all
bind-key 4C-r   		restart
bind-key 4C-q 	    	quit
bind-key 4-l 		    slock
bind-key 4-space 	    launch
bind-key 4-Return 	    kitty

# window controls
bind-key 4-equal	    window-maximize
bind-key 4-minus 	    window-hide	
bind-key 4-BackSpace	window-delete
bind-key 4-Tab	    	window-cycle
bind-key 4S-Tab	    	window-rcycle
bind-key 4-t	    	window-vtile

# mouse controls

bind-mouse 4-1 	    	window-move
bind-mouse 4-3 		    window-resize


# groups
sticky yes

bind-key 4-1    		group-only-1
bind-key 4-2	    	group-only-2
bind-key 4-3	    	group-only-3
bind-key 4S-1	    	window-movetogroup-1
bind-key 4S-2	    	window-movetogroup-2
bind-key 4S-3	    	window-movetogroup-3
